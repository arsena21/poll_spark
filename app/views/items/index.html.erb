<% @items.each do |item| %>
	<strong>
		<%= link_to item.name, edit_item_path(item)	, {:style=>'color:#000000;'} %>
	</strong>
	<div class="meta">
		<%= item.cost %> 
	<%= item.petition_id %>
	</div> 
	<div class="imgholder">
		<%= link_to image_tag(item.pictures_url), edit_item_path(:id => item.id)  %>
	</div>
<% end %>
