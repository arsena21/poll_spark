


<% provide :title do  %>
	<% "Sign in" %>
<%end%>

<div class="row">
<h1>Sign in</h1>

<div class="small">

*You will <b>only</b> receive 2 emails: one to verify your account, and a second if a campaign you voted for is launched.* <br /><i>(We <u>also</u> hate spam!)</i><br/><br/>

</div><br />

<div class="row" >
	<div class="span1" >
	</div>

	<div class="span2" >
		<div class="textwrap3">
			<div id="center">Option 1:
			</div>
		</div><br />
		<div class="span3" >
		</div>	
			<div class="span6" >
				<div class="block2">
					<div>
						<a href="/auth/facebook"><img src="/images/facebook_64.png" /></a>
					</div>
				</div>
			</div>
		
	</div>

	<div class="span1" >
	</div>

	<div class="span2" >
		<div class="textwrap3">
			<div id="center">Option 2:
			</div>
		</div><br />
		<div class="span3" >
		</div>	
			<div class="span6" >
				<div class="block2">
					<div>
						<a href="/auth/google"><img src="/images/google_64.png" /></a>
					</div>
				</div>
			</div>
				
	</div>

	<div class="span1" >
	</div>

	<div class="span4" >
		<div class="textwrap3">
			<div id="center">Option 3:
			</div>
		</div><br />
		<div style="display:none">
		  <%= form_for(@user) do |f| %>
				  <%= render 'shared/error_messages', object: f.object %>

				  <%= f.label :name %>
				  <%= f.text_field :name, class:"span12" %>

				  <%= f.label :email %>
				  <%= f.text_field :email, class:"span12" %>

				  <%= f.label :country %>
				  <%= f.text_field :country, class:"span12" %>

				  <%= f.label :password %>
				  <%= f.password_field :password, class:"span12" %>

				  <%= f.label :password_confirmation, "Confirmation" %>
				  <%= f.password_field :password_confirmation, class:"span12" %>
				  <div class="votes">
					<div class="row">
						<%= f.submit "Signup!", class: "btn btn-large btn-primary" %>
					</div>
					Returning User? <%= link_to " login here", "/auth/identity" %> <br />
					<%= link_to "Create an account", "/auth/identity/register" %>
				  </div>
			<% end %>
			</div>
			<div id="login_form_div">
				<%= form_tag "/auth/identity/callback" do %>
				  <div class="field">
				    <%= label_tag :auth_key, "Email" %><br>
				    <%= text_field_tag :auth_key,'', :class => "span12" %>
				  </div>
				  <div class="field">
				    <%= label_tag :password %><br>
				    <%= password_field_tag :password,'', :class => "span12" %>
				  </div>
				  	<div class="votes">
				  		<div class="row"><%= submit_tag "Login", :class => "btn btn-large btn-primary" %></div>
						New User? <%= link_to " signup here", "#", :onclick => "$('#login_form_div').hide();$('#signup_form_div').show();", :class => "resizing"%> <br />
					  </div>
				<% end %>
			</div>
			<div id="signup_form_div">
				  <%= form_tag "/auth/identity/register" do %>
			      <% if @identity && @identity.errors.any? %>
			        <div class="error_messages">
			          <h2><%= pluralize(@identity.errors.count, "error") %> prohibited this account from being saved:</h2>
			          <ul>
			          <% @identity.errors.full_messages.each do |msg| %>
			            <li><%= msg %></li>
			          <% end %>
			          </ul>
			        </div>
			      <% end %>
			      <div class="field">
			        <%= label_tag :name %><br>
			        <%= text_field_tag :name, @identity.try(:name), class:"span12"%>
			      </div>
			      <div class="field">
			        <%= label_tag :email %><br>
			        <%= text_field_tag :email, @identity.try(:email), class:"span12" %>
			      </div>
			      <div class="field">
			        <%= label_tag :password %><br>
			        <%= password_field_tag :password,'', class:"span12" %>
			      </div>
			      <div class="field">
			        <%= label_tag :password_confirmation %><br>
			        <%= password_field_tag :password_confirmation,'', class:"span12" %>
			      </div>
			      <div class="votes">
				  		<div class="row"><%= submit_tag "Sign Up", :class => "btn btn-large btn-primary" %></div>
						Returning User? <%= link_to " login here", "#", :onclick => "$('#signup_form_div').hide();$('#login_form_div').show();", :class => "resizing" %> <br />
				  </div>
			    <% end %>
			</div>
</div>
</div>


<script type="text/javascript">
$("document").ready(function(){
	$("#signup_form_div").hide();

});
</script>



