<% provide(:title, "New Campaign") %>
<% provide :toppage do  %>
	Create a new campaign
<%end%>
  
  <% if signed_in? %>
  <%= @user.name %>, thanks for your interest in creating a new campaign! To create a successful campaign, keep the following tips in mind: <br>
  <br>
  1) The Campaign must have clear demands. Campaigns with no clear direction or demands will not be accepted. Example...
  <br>
  2) The Campaign must be appropriately researched. References must be supplied. 
  <br><br><br>
  Please not that not all campaigns will be accepted. Criteria for campaigns include relevance and uniqueness.  <br />
  <br><br>
  <%else%>
  Thanks for your interest in creating a new campaign! To create a successful campaign, keep the following things in mind: <br>
  <br>
  1) ... 
  <br>
  2) ... 
  <br><br><br>
  You must sign in to create a new campaign.
  <br><br> 
  <%end%>

  
  
  
			<% if signed_in? %>
				 <%= form_for(@petition) do |f| %>
				  <%= render 'shared/error_messages', object: f.object %>
				  <%= f.hidden_field :user_id, :value => current_user.id %>
				  <h4 id="left">Campaign Name<h4 id="left"> <br>
				  <%= f.text_field :name %><br /><br /><br />
				  <h4 id="left">Campaign Description<h4 id="left"> <br>				
				  	
					<div id="wysihtml5-toolbar" style="display: none;">
						 <div class="btn-toolbar">
							 <div class="btn-group"> 
								  <a class = "btn" data-wysihtml5-command="bold" title="CTRL+B"><b>bold</b></a>
								  <a class = "btn" data-wysihtml5-command="italic" title="CTRL+I"><i>italic</i></a>
								  <a class = "btn" data-wysihtml5-command="underline" title="CTRL+U"><u>underline</u></a>
							 </div>
							  
							 <div class="btn-group">
								  <a class="btn" data-wysihtml5-command="insertUnorderedList" title="Unordered List" href="javascript:;" unselectable="on"><i class="icon-list"></i></a>
								  <a class="btn" data-wysihtml5-command="insertOrderedList" title="Ordered List" href="javascript:;" unselectable="on"><i class="icon-th-list"></i></a>
								  <a class="btn" data-wysihtml5-command="Indent" title="Indent" href="javascript:;" unselectable="on"><i class="icon-indent-left"></i></a>  
								  <a class="btn" data-wysihtml5-command="Outdent" title="Outdent" href="javascript:;" unselectable="on"><i class="icon-indent-right"></i></a>
							 </div>
							 
							 <div class="btn-group">
									<a class="btn" data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="div" href="javascript:;" unselectable="on">Normal text</a>
									<a class="btn" data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h1" href="javascript:;" unselectable="on">Heading 1</a>  
									<a class="btn" data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h2" href="javascript:;" unselectable="on">Heading 2</a>
							 </div>
							</div>  
					</div>				
	
					<%= f.text_area :description, class: "span12", id: "wysihtml5-textarea"  %>	<br><br /><br />
					<h4 id="left">Useful Links<h4 id="left"> <br>
					<%= f.text_area :links, class: "span12", id: "wysihtml5-textarea2"  %>
					<br>
					<%= submit_tag "Complete!", :name => 'done', class: "btn btn-large btn-primary" %>
					
					<%= submit_tag "Save", :name => 'almostdone', class: "btn btn-large btn-primary" %>
					<% if current_user.admin? %>
						<%= link_to "delete", @petition, method: :delete,
												  data: { confirm: "You sure?" }, class: "btn btn-large btn-primary" %>
											  <%= f.label :pass %>
						<%= f.text_field :pass %>							  
					<% end %>
			    <% end %>	

			<% else %>
				<%= form_for(@petition) do |f| %>
				  <h4 id="left">Campaign Name</h4> <br>
				  <%= f.text_field :name, class:"span6" %><br /><br /><br />
				  <h4 id="left">Campaign Description</h4> <br>				
				  	
					<div id="wysihtml5-toolbar">
						 <div class="btn-toolbar">
							 <div class="btn-group"> 
								  <a class = "btn" data-wysihtml5-command="bold" title="CTRL+B"><b>bold</b></a>
								  <a class = "btn" data-wysihtml5-command="italic" title="CTRL+I"><i>italic</i></a>
								  <a class = "btn" data-wysihtml5-command="underline" title="CTRL+U"><u>underline</u></a>
							 </div>
							  
							 <div class="btn-group">
								  <a class="btn" data-wysihtml5-command="insertUnorderedList" title="Unordered List" href="javascript:;" unselectable="on"><i class="icon-list"></i></a>
								  <a class="btn" data-wysihtml5-command="insertOrderedList" title="Ordered List" href="javascript:;" unselectable="on"><i class="icon-th-list"></i></a>
								  <a class="btn" data-wysihtml5-command="Indent" title="Indent" href="javascript:;" unselectable="on"><i class="icon-indent-left"></i></a>  
								  <a class="btn" data-wysihtml5-command="Outdent" title="Outdent" href="javascript:;" unselectable="on"><i class="icon-indent-right"></i></a>
							 </div>
							 
							 <div class="btn-group">
									<a class="btn" data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="div" href="javascript:;" unselectable="on">Normal text</a>
									<a class="btn" data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h1" href="javascript:;" unselectable="on">Heading 1</a>  
									<a class="btn" data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h2" href="javascript:;" unselectable="on">Heading 2</a>
							 </div>
							</div>  
					</div>				
	
					<%= f.text_area :description, class: "span12", id: "wysihtml5-textarea"  %>	<br><br /><br />
					<h4 id="left">Useful Links</h4> <br>
					<%= f.text_area :links, class: "span12", id: "wysihtml5-textarea2"  %>
					<%= link_to "Please sign in to create a new campaign", signin_path, class: "btn btn-large btn-primary" %>

				<% end %>	
			<% end %>
			
			
			



