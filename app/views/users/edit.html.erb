<% provide :title do  %>
	<%= @user.name %>
<%end%>
<% provide :toppage do  %>
	<%= @user.name %>
<%end%>
<div class="row">
  <aside class="span4">
    <section>
      
        <%= gravatar_for current_user %>
		
			<%= form_for(current_user) do |f| %>
			      <%= render 'shared/error_messages' %>  
							<%= f.label :name %>
							<%= f.text_field :name %>
							<%= f.label :email %>
							<%= f.text_field :email %>	
							<%= f.label :country %>
							<%= f.select :country, [['Canada','Canada'],['United States','United States'],['Mexico','Mexico'],['France','France'],['UK','UK']] %>
							<%= f.label :password %>
							<%= f.password_field :password %>
							<%= f.label :password_confirmation, "Confirm Password" %>
							<%= f.password_field :password_confirmation %>	
				 <%= f.submit "Change Settings", class: "btn btn-large btn-primary" %>
		    <% end %>
	 
    </section>
  </aside>
</div>